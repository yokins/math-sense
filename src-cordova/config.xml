<?xml version='1.0' encoding='utf-8'?>
<widget id="com.yokins.ms.app" version="1.0.0" 
    xmlns="http://www.w3.org/ns/widgets" 
    xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>非常数感</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <!-- this hook will point your config.xml to the DevServer on Serve -->
    <hook type="after_prepare" src="../node_modules/vue-cli-plugin-cordova/serve-config-hook.js" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="res/icons/android/mipmap-ldpi/ic_launcher.png" density="ldpi" />
        <icon src="res/icons/android/mipmap-mdpi/ic_launcher.png" density="mdpi" />
        <icon src="res/icons/android/mipmap-hdpi/ic_launcher.png" density="hdpi" />
        <icon src="res/icons/android/mipmap-xhdpi/ic_launcher.png" density="xhdpi" />
        <icon src="res/icons/android/mipmap-xxhdpi/ic_launcher.png" density="xxhdpi" />
        <icon src="res/icons/android/mipmap-xxxhdpi/ic_launcher.png" density="xxxhdpi" />

        <splash density="land-hdpi" src="res/splashes/android/drawable-land-hdpi/screen.png" />
        <splash density="land-ldpi" src="res/splashes/android/drawable-land-ldpi/screen.png" />
        <splash density="land-mdpi" src="res/splashes/android/drawable-land-mdpi/screen.png" />
        <splash density="land-xhdpi" src="res/splashes/android/drawable-land-xhdpi/screen.png" />
        <splash density="land-xxhdpi" src="res/splashes/android/drawable-land-xxhdpi/screen.png" />
        <splash density="land-xxxhdpi" src="res/splashes/android/drawable-land-xxxhdpi/screen.png" />
        <splash density="port-hdpi" src="res/splashes/android/drawable-port-hdpi/screen.png" />
        <splash density="port-ldpi" src="res/splashes/android/drawable-port-ldpi/screen.png" />
        <splash density="port-mdpi" src="res/splashes/android/drawable-port-mdpi/screen.png" />
        <splash density="port-xhdpi" src="res/splashes/android/drawable-port-xhdpi/screen.png" />
        <splash density="port-xxhdpi" src="res/splashes/android/drawable-port-xxhdpi/screen.png" />
        <splash density="port-xxxhdpi" src="res/splashes/android/drawable-port-xxxhdpi/screen.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="res/icons/ios/AppIcon.appiconset/icon-60@3x.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="res/icons/ios/AppIcon.appiconset/icon-60@2x.png" width="60" height="60" />
        <icon src="res/icons/ios/AppIcon.appiconset/icon-60@2x.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="res/icons/ios/AppIcon.appiconset/icon-76.png" width="76" height="76" />
        <icon src="res/icons/ios/AppIcon.appiconset/icon-76@2x.png" width="152" height="152" />
        <!-- Spotlight Icon -->
        <icon src="res/icons/ios/AppIcon.appiconset/icon-40.png" width="40" height="40" />
        <icon src="res/icons/ios/AppIcon.appiconset/icon-40@2x.png" width="80" height="80" />
        <!-- iOS 6.1 -->
        <!-- iPhone / iPod Touch -->
        <icon src="res/icons/ios/AppIcon.appiconset/icon-57.png" width="57" height="57" />
        <icon src="res/icons/ios/AppIcon.appiconset/icon-57@2x.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="res/icons/ios/AppIcon.appiconset/icon-72.png" width="72" height="72" />
        <icon src="res/icons/ios/AppIcon.appiconset/icon-72@2x.png" width="144" height="144" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="res/icons/ios/AppIcon.appiconset/icon-29.png" width="29" height="29" />
        <icon src="res/icons/ios/AppIcon.appiconset/icon-29@2x.png" width="58" height="58" />
        <icon src="res/icons/ios/AppIcon.appiconset/icon-29@3x.png" width="87" height="87" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="res/icons/ios/AppIcon.appiconset/icon-50.png" width="50" height="50" />
        <icon src="res/icons/ios/AppIcon.appiconset/icon-50@2x.png" width="100" height="100" />
        <!-- iPad Pro -->
        <icon src="res/icons/ios/AppIcon.appiconset/icon-83.5@2x.png" width="167" height="167" />

        <splash src="res/splashes/ios/LaunchImage.launchimage/Default~iphone.png" width="320" height="480"/>
        <splash src="res/splashes/ios/LaunchImage.launchimage/Default@2x~iphone.png" width="640" height="960"/>
        <splash src="res/splashes/ios/LaunchImage.launchimage/Default-Portrait~ipad.png" width="768" height="1024"/>
        <splash src="res/splashes/ios/LaunchImage.launchimage/Default-Portrait@2x~ipad.png" width="1536" height="2048"/>
        <splash src="res/splashes/ios/LaunchImage.launchimage/Default-Landscape~ipad.png" width="1024" height="768"/>
        <splash src="res/splashes/ios/LaunchImage.launchimage/Default-Landscape@2x~ipad.png" width="2048" height="1536"/>
        <splash src="res/splashes/ios/LaunchImage.launchimage/Default-568h@2x~iphone.png" width="640" height="1136"/>
        <splash src="res/splashes/ios/LaunchImage.launchimage/Default-667h.png" width="750" height="1334"/>
        <splash src="res/splashes/ios/LaunchImage.launchimage/Default-736h.png" width="1242" height="2208"/>
        <splash src="res/splashes/ios/LaunchImage.launchimage/Default-Landscape-736h.png" width="2208" height="1242"/>
        <edit-config target="NSCameraUsageDescription" file="*-Info.plist" mode="merge">
            <string>需要授权相机权限</string>
        </edit-config>
        <edit-config target="NSMicrophoneUsageDescription" file="*-Info.plist" mode="merge">
            <string>需要授权麦克风权限</string>
        </edit-config>
        <edit-config target="NSPhotoLibraryUsageDescription" file="*-Info.plist" mode="merge">
            <string>需要授权读取图片权限</string>
        </edit-config>
        <edit-config target="NSPhotoLibraryAddUsageDescription" file="*-Info.plist" mode="merge">
            <string>需要授权保存图片权限</string>
        </edit-config>
    </platform>
    <preference name="WebViewBounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="Orientation" value="portrait" />
    <!-- 自动隐藏启动页面 -->
    <preference name="AutoHideSplashScreen" value="true" />
    <!-- 显示启动页面的时间长度 -->
    <preference name="SplashScreenDelay" value="3000" />
    <!-- 是否显示淡入淡出效果FadeSplashScreen(默认为：true) -->
    <preference name="FadeSplashScreen" value="true"/>
    <!-- 淡入淡出效果的执行时间长度FadeSplashScreenDuration(默认为：500) -->
    <preference name="FadeSplashScreenDuration" value="750"/>
    <!-- 启动页面是否允许旋转（默认为：true） -->
    <preference name="ShowSplashScreenSpinner" value="false"/>
    <preference name="KeyboardShrinksView" value="true" />
    <preference name="DisableScrollingWhenKeyboardShrinksView" value="true" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <!-- <preference name="AndroidPersistentFileLocation" value="Internal" /> -->
    <preference name="iosPersistentFileLocation" value="Compatibility" />
    <preference name="iosExtraFilesystems" value="library,library-nosync,documents,documents-nosync,cache,bundle,root" />
    <preference name="AndroidExtraFilesystems" value="files,files-external,documents,sdcard,cache,cache-external,assets,root" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#3296FA" />
</widget>
